<!--index.wxml-->
<view class="container">
  <!-- 搜索框 -->
  <view id="search">
    <input value="search" id="searchInput"></input>
    <image src="/images/search.png" mode="aspectFit" id="searchImg"></image>
  </view>

  <!-- 筛选列表 -->
  <view>
    <form>
      <picker bindchange="bindPickerChange" value="{{subjectIndex}}"  range="{{subjectArray}}">
        <view>
          科目: {{subjectArray[subjectIndex]}}
        </view>
      </picker>
      <picker bindchange="bindPickerChange" value="{{positionIndex}}" range="{{positionArray}}">
        <view>
          地区：{{positionArray[positionIndex]}}
        </view>
      </picker>
      <picker bindchange="bindPickerChange" value="{{dateIndex}}" range="{{dateArray}}">
        <view>
          日期：{{dateArray[dateIndex]}}
        </view>
      </picker>
    </form>
  </view>

  <!-- 比赛列表 -->
  <view>
    <view>比赛列表</view>
  </view>
</view>