<view class="container">
  <view bindchange="" id="user">
    <image src="/images/user.png" mode="aspectFit" id="userImg"></image>
    <input type="text" value="username" placeholder="请输入用户名" id="username"></input>
  </view>

<!-- 浏览记录 -->

  <view>
    <view id="text">浏览记录</view>
    <view wx:for="{{subArray}}">
      <view wx:if="{{item.viewed == 'true'}}" class="list">
        <image src="/images/game.png" class="listImg" class="listImg"></image>
        <navigator url="/pages/detail/detail?index={{index}}">{{item.name}}</navigator>
      </view>
    </view>
  </view>
</view>