Page {
  background: #fff;
}

.image-group {
  display: flex;
  white-space: nowrap;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}

.image-group image {
  display: inline-block;
  margin-right: 20rpx;
}

.list {
  display: flex;
  margin-top: 20rpx;
  flex-shrink: 0;
}

#recommd {
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.img {
  width: 250rpx;
  height: 250rpx;
  margin-right: 40rpx;
  margin-bottom: 30rpx;
}

.title {
  padding: 50rpx;
}

.title-list {
  padding: 0;
}

.recommd {
  position: relative;
}

.child {
  position: absolute;
  left: 0;
  top: 100rpx;
  right: 0;
  bottom: 0;
  margin: auto;
  text-align: center;
}